lass CreatureCard : Card
{
	String name;
	String race;
	int attack;
	int shield;
	int health;
	int speed;
	int[] effects;
	String flavor;
	int currentHP;

	public CreatureCard(String name, int atk, int sld, int hp, int spd, String flav, int[] effs)
	{
		super(name, effs);
		attack = atk;
		shield = sld;
		health = hp;
		speed = spd;
		flavor = flav;
		currentHP = health;
	}

	void takeDamage(int dmg)
	{
		int hpDmg = dmg - shield;
		if (hpDmg > 0)
			health = health - hpDmg;
	}

	void dealDamage(Card target)
	{
		target.takeDamgage(attack);
	}
}

//Machine Creature
class Machine: CreatureCard
{
	String name;
	String race;
	int attack;
	int shield;
	int health;
	int speed;
	int[] effects;
	String flavor;
	int currentHP;

	public CreatureCard(String name, int atk, int sld, int hp, int spd, String flav, int[] effs)
	{
		super(name, effs);
		attack = atk;
		shield = sld;
		health = hp;
		speed = spd;
		flavor = flav;
		currentHP = health;
	}

	int queue()
	{ return speed;}
}

